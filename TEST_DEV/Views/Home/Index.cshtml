@model TEST_DEV.Requests.LoginRequest
@{

}

<div class="uk-child-width-1-3@m uk-child-width-1-1@s" uk-grid>
    <div></div>
    <div>
        <div class="uk-margin-xlarge-top">
            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "uk-form-stacked" }))
            {
                <fieldset class="uk-fieldset">
                    <div>
                        @Html.ValidationMessageFor(e => e.Error, "", new { @class = "uk-form-danger" })
                    </div>
                    
                    <div class="uk-margin-top">
                        @Html.LabelFor(c => c.Correo, new { @class = "uk-form-label" })
                        <div class="uk-form-controls">
                            @Html.TextBoxFor(c => c.Correo, new { @class = "uk-input", placeholder = "Correo eletrónico" })
                        </div>
                        <div>
                            @Html.ValidationMessageFor(c => c.Correo, "", new { @class = "uk-form-danger" })
                        </div>
                    </div>
                    
                    <div class="uk-margin-top">
                        @Html.LabelFor(p => p.Password, new { @class = "uk-form-label" })
                        <div class="uk-form-controls">
                            @Html.PasswordFor(p => p.Password, new { @class = "uk-input", placeholder = "Contraseña" })
                        </div>
                        <div>
                            @Html.ValidationMessageFor(p => p.Password, "", new { @class = "uk-form-danger" })
                        </div>
                    </div>
                    <div class="uk-text-center uk-margin-small-top">
                        <button type="submit" class="uk-button uk-button-primary">Iniciar sesión</button>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>
